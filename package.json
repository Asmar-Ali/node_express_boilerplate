{
  "name": "create-nodejs-express-app",
  "version": "1.7.0",
  "description": "Create a Node.js app for building production-ready RESTful APIs using Express, by running one command",
  "bin": "bin/createNodejsApp.js",
  "main": "src/index.js",
  "author": "Asmar Ali",
  "license": "MIT",
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "start": "pm2 start ecosystem.config.json --no-daemon",
    "dev": "cross-env NODE_ENV=development nodemon src/index.js",
    "test": "jest -i --colors --verbose --detectOpenHandles",
    "test:watch": "jest -i --watchAll",
    "coverage": "jest -i --coverage",
    "coverage:coveralls": "jest -i --coverage --coverageReporters=text-lcov | coveralls",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --check **/*.js",
    "prettier:fix": "prettier --write **/*.js",
    "prepare": "husky install",
    "client": "cd ../frontend-folder-name && npm start",
    "both": "concurrently \"npm run start\" \"npm run client\""
  },
  "keywords": [
    "node",
    "node.js",
    "boilerplate",
    "generator",
    "express",
    "rest",
    "api",
    "mongodb",
    "es6",
    "es7",
    "es8",
    "es9",
    "jest",
    "travis",
    "passport",
    "joi",
    "eslint",
    "prettier"
  ],
  "dependencies": {
    "@giorgosavgeris/passport-zoom-oauth2": "^1.1.0",
    "@microsoft/microsoft-graph-client": "^3.0.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.2",
    "compression": "^1.7.4",
    "concurrently": "^7.1.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-mongo-sanitize": "^2.0.0",
    "express-rate-limit": "^5.0.0",
    "form-data": "^4.0.0",
    "helmet": "^4.1.0",
    "http-proxy": "^1.18.1",
    "http-status": "^1.4.0",
    "isomorphic-fetch": "^3.0.0",
    "joi": "^17.3.0",
    "joi-objectid": "^4.0.2",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.2",
    "moment": "^2.24.0",
    "morgan": "^1.9.1",
    "node-fetch": "^2.6.6",
    "node-outlook": "^1.1.8",
    "nylas": "^6.4.0",
    "passport-apple": "^1.1.1",
    "passport-google-oauth": "2.0.0",
    "passport-jwt": "4.0.0",
    "passport-microsoft": "^0.1.0",
    "passport-oauth2-refresh": "^2.0.1",
    "passport-outlook": "^3.0.0",
    "pg": "^8.11.5",
    "pm2": "^5.2.0",
    "request": "^2.88.2",
    "sequelize": "^6.37.3",
    "swagger-jsdoc": "^6.2.1",
    "swagger-ui-express": "^4.1.6",
    "validator": "^13.0.0",
    "winston": "^3.2.1",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "@types/module-alias": "^2.0.1",
    "coveralls": "^3.0.7",
    "eslint": "^7.0.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^24.0.1",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-security": "^1.4.0",
    "faker": "^5.1.0",
    "husky": "^7.0.0",
    "jest": "^26.0.1",
    "lint-staged": "^11.0.0",
    "node-mocks-http": "^1.8.0",
    "nodemon": "^2.0.0",
    "prettier": "^2.0.5",
    "supertest": "^6.0.1"
  },
  "_moduleAliases": {
    "@root": ".",
    "@controllers/*": "dist/controllers",
    "@routes/*": "dist/routes/*",
    "@utils/*": "dist/@expresso/*",
    "@config/*": "dist/config/*",
    "@database/*": "dist/database/*",
    "@jobs/*": "dist/jobs/*",
    "@middlewares/*": "dist/middlewares/*",
    "@views/*": "dist/views/*"
  }
}
